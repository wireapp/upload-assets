{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "src",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "exclude": ["dist", "node_modules"]
}
